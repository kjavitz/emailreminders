<?xml version="1.0"?>
<config>
    <modules>
        <IWE_EmailReminder>
            <version>0.0.2</version>
        </IWE_EmailReminder>
    </modules>

    <global>
        <blocks>
            <iwe_emailreminder>
                <class>IWE_EmailReminder_Block</class>
            </iwe_emailreminder>
            <followupemail>
                <rewrite>
                    <adminhtml_rule_edit_tab_general>IWE_EmailReminder_Block_Adminhtml_Rule_Edit_Tab_General</adminhtml_rule_edit_tab_general>
                </rewrite>
            </followupemail>
        </blocks>
        <helpers>
            <iwe_emailreminder>
                <class>IWE_EmailReminder_Helper</class>
            </iwe_emailreminder>
        </helpers>
        <resources>
            <iwe_emailreminder_setup>
                <setup>
                    <module>IWE_EmailReminder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </iwe_emailreminder_setup>
            <iwe_emailreminder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </iwe_emailreminder_write>
            <iwe_emailreminder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </iwe_emailreminder_read>
        </resources>
    </global>
</config>